<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:id="@+id/fromLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/round_edittext"
        android:maxWidth="200dp"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintStart_toEndOf="@+id/fromImageView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fromTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/abeezee"
            android:maxWidth="200dp"
            android:text="MOVIE NAME"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#373434"/>

        <TextView
            android:id="@+id/fromCommentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:text="Movie comment"
            android:textColor="#373434"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fromImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/black"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/circle" />
</androidx.constraintlayout.widget.ConstraintLayout>