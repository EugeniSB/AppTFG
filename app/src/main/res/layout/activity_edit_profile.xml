<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A5A499"
    tools:context=".EditProfileActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="484dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219">

        <TextView
            android:id="@+id/titleEditProfile"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:fontFamily="sans-serif"
            android:text="@string/editProfileTitle"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold"

            android:typeface="normal" />

        <EditText
            android:id="@+id/fullnameEditProfileEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Full name"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/usernameEditProfileEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Username"
            android:inputType="textEmailAddress" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:id="@+id/phoneEditProfileEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Phone number"
            android:inputType="phone" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="5dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/profileavatarTextView"
                android:layout_width="209dp"
                android:layout_height="35dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="2dp"
                android:gravity="bottom"
                android:text="Profile Avatar"
                android:textColor="#8F333232"
                android:textSize="18sp" />

            <android.widget.Button
                android:id="@+id/uploadImageProfileButton"
                android:layout_width="143dp"
                android:layout_height="34dp"
                android:background="@drawable/outlinedbutton"
                android:backgroundTint="@null"
                android:paddingTop="15dp"
                android:text="Upload Image"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:layout_editor_absoluteY="-1dp" />
        </TableRow>

        <View
            android:id="@+id/divider3"
            android:layout_width="376dp"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:background="#494545" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <ImageView
            android:id="@+id/editprofileAvatar"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            app:srcCompat="@drawable/profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelEditProfileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#8C1D1D"
                android:text="Cancel" />

            <Button
                android:id="@+id/acceptEditProfileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#373434"
                android:text="Edit" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>