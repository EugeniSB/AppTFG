<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/profileIcon"
        android:layout_width="67dp"
        android:layout_height="58dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/profile" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="76dp"
        android:background="#332E2E"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/logoffButton"
        android:layout_width="143dp"
        android:layout_height="44dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="1"
        android:backgroundTint="#8C1D1D"
        android:text="Log off"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="349dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.324">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mygroupsButton"
                android:layout_width="162dp"
                android:layout_height="68dp"
                android:layout_marginRight="40dp"
                android:backgroundTint="#373434"
                android:text="Groups"
                android:textSize="20sp" />

            <Button
                android:id="@+id/mycontactsButton"
                android:layout_width="162dp"
                android:layout_height="68dp"
                android:backgroundTint="#373434"
                android:text="Contacts"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/homerecommendButton"
            android:layout_width="255dp"
            android:layout_height="102dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#373434"
            android:text="Recommend"
            android:textSize="20sp" />

        <Button
            android:id="@+id/recommendationsButton"
            android:layout_width="257dp"
            android:layout_height="102dp"
            android:backgroundTint="#373434"
            android:text="Recommendations"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>