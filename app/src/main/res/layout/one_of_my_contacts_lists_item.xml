<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/oneOfMyContactsListsImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="180dp"
        android:maxWidth="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_image"
        android:clipToOutline="true"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/oneOfMyContactsListsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:text="Movie name"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/oneOfMyContactsListsImageView"
        app:layout_constraintStart_toStartOf="@+id/oneOfMyContactsListsImageView"
        app:layout_constraintTop_toBottomOf="@+id/oneOfMyContactsListsImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>